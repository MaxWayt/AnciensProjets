#include <stdlib.h>
#include "my.h"

int	my_put_x_space(int x)
{
  int	i;

  i = 0;
  while (i++ < x)
    write(1, " ", 1);
  return (x);
}

void	exit_error(char *str)
{
  my_putstr(str);
  exit(1);
}
